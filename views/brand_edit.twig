<html>
    <head>
        <title>Brand Edit</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

    </head>
    <body>
    <div class='container'>

    <!-- ======== EDIT BRAND ======== -->
        <div class="row">
            <h3>{{ brand.getBrandName }}</h3>
                <form action="/brand/{{ brand.getId }}/edit" method="post">
                    <input id="brand_name" name="brand_name" type="text" value="New Name">
                    <button type="submit" class='btn btn-xs btn-success'>Edit Brand</button>
                </form>

                <form action="/brand/{{ brand.getId }}/delete" method="post">
                    <button type="submit" class='btn btn-xs btn-danger'>Delete Brand</button>
                </form>
        </div>

    <!-- - - - LIST STORES WITH THIS BRAND - - - -->
        {% if brand_stores is not empty %}
        <div>
        <h4>Available at these fine locations:</h4>
            {% for store in brand_stores %}
            <li><a href='/store/{store.getId}'>{{ store.getStoreName }}</a></li>
            {% endfor %}
            {% else %}
            <p>No stores have been added yet for this brand.  Do any of these stores carry it?  Or add a new store to our list!</p>
            <br>
        </div>
        {% endif %}

    <!-- - - - ADD STORE TO BRAND - - - -->
        {% if stores is not empty %}
        <h4>All Stores</h4>
            {% for store in stores %}
            <a href='/store/{store.getId}'>{{ store.getStoreName }}</a></br>
            {% endfor %}
            {% else %}
            <a href='/add_store'>Add a new store</a>
        {% endif %}






    </div>
    </body>
</html>
